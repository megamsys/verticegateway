if [ "$1" = "remove" ]; then
    # Remove logs
    rm -rf /var/log/megam/megamgateway/*
fi

if [ "$1" = "purge" ]; then
    # purge stats overrides
    # stats overrides could already be removed by root
    dpkg-statoverride --remove /var/log/megam || true
    dpkg-statoverride --remove /var/lib/megam/.megam_auth || true
fi


